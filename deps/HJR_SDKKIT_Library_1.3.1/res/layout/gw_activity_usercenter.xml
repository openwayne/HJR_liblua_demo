	    android:id="@+id/gw_sl_info"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_below="@+id/rl1"
	    android:scrollbars="vertical"
	    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
    >    -->
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_below="@id/rl1"
      ></RelativeLayout>

                <RelativeLayout
                    android:id="@+id/list1"
                    android:layout_width="300dp"
                    android:layout_height="140dp"
                    android:layout_alignTop="@id/rl1"
                    android:layout_marginTop="80dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/list_bg" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/textView5"
                        android:background="@color/pic_gray"
                        android:orientation="horizontal" >
                    </LinearLayout>

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_alignLeft="@+id/textView5"
                        android:layout_below="@+id/textView5"
                        android:gravity="center"
                        android:text="充值帮助"
                        android:textColor="@color/light_gray" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/textView6"
                        android:background="@color/pic_gray"
                        android:orientation="horizontal" >
                    </LinearLayout>

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_alignLeft="@+id/textView6"
                        android:layout_below="@+id/textView6"
                        android:gravity="center"
                        android:text="修改密码"
                        android:textColor="@color/light_gray" />

                    <LinearLayout
                        android:id="@+id/linearLayout2"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/textView4"
                        android:background="@color/pic_gray"
                        android:orientation="horizontal" >
                    </LinearLayout>
                     <ImageView
                        android:id="@+id/gw_iv_autologin"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/linearLayout2"
                        android:layout_marginRight="16dp"
                        android:src="@drawable/btn_on" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_alignLeft="@+id/textView4"
                        android:layout_below="@+id/textView4"
                        android:gravity="center"
                        android:text="自动登录"
                        android:textColor="@color/light_gray" />



                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:gravity="center"
                        android:text="充值记录"
                        android:textColor="@color/light_gray" />

                </RelativeLayout>
                
                
                <RelativeLayout
                android:id="@+id/gw_rl_exitlogin"
                android:layout_width="300dp"
                android:layout_height="35dp"
                android:layout_below="@id/list1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_out_nor" >

                <TextView
                    android:id="@+id/gw_tv_exitlogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="退出当前账号"
                    android:textSize="20dp"
                    android:textColor="@color/pure_red"
                     />
            </RelativeLayout>
<!--  </RelativeLayout>
            
 
    
    </ScrollView>  -->
    
    
</RelativeLayout>