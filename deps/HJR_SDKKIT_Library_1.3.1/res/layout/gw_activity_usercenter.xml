<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/relativelaout1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/topbar_bg" >

        <ImageButton
            android:id="@+id/close"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/back_hl"
            android:background="#00000000" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="用户中心"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/relativelaout1"
        android:orientation="horizontal"
        android:background="#797979" >
    </LinearLayout>
    
    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/relativelaout1"
        android:background="@drawable/user_bg"
   	>
        <TextView
            android:id="@+id/gw_tv_account_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="120dp"
            android:text="账号："
            android:textSize="14dp"
            android:textColor="@color/light_gray" />
        		
        <TextView
            android:id="@+id/gw_tv_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/gw_tv_account_tip"
            android:layout_alignBottom="@+id/gw_tv_account_tip"
            android:text="test"
            android:singleLine="true"
            android:ems="10"
            android:textSize="20dp"
            android:textColor="@color/white" />	
		
		<TextView
            android:id="@+id/gw_tv_nickname_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_below="@+id/gw_tv_account_tip"
            android:layout_alignLeft="@+id/gw_tv_account_tip"
            android:textSize="14dp"
            android:text="昵称："
            android:textColor="@color/light_gray" />
		
		<TextView
            android:id="@+id/gw_tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/gw_tv_nickname_tip"
            android:layout_alignBottom="@+id/gw_tv_nickname_tip"
            android:text="test"
            android:textSize="20dp"
             android:singleLine="true"
            android:ems="10"
            android:textColor="@color/light_orange" />	
		
		<RelativeLayout
                android:id="@+id/gw_btn_changeAccount"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_alignLeft="@+id/gw_tv_nickname_tip"
                android:layout_below="@+id/gw_tv_nickname_tip"
                android:layout_marginTop="4dp"
                android:background="@drawable/button_yellow_nor"
                android:visibility="invisible" >
                
		    	<ImageView
                    android:layout_width="20dp"
                	android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/icon_refresh"
                    android:layout_centerVertical="true"
                     />

                <TextView
                    android:layout_width="wrap_content"
                	android:layout_height="wrap_content"
                    android:text="切换帐号"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                     />
            </RelativeLayout>
			<Button
                    android:id="@+id/unknowBtn"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_below="@+id/gw_tv_nickname_tip"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="8dp"
                    android:layout_toRightOf="@+id/gw_btn_changeAccount"
                    android:background="@drawable/button_yellow_nor"
                    android:text="未知按钮"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:visibility="gone"
                     />
        
    </RelativeLayout>
    
