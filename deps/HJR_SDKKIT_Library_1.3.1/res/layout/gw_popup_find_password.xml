<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@color/white"
    android:id="@+id/find_pwd_layout">
        <RelativeLayout
        android:id="@+id/relativelayout1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/window_top_bg" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="@string/find_password"
            android:textSize="20sp"
            android:textColor="@color/white" />

        <LinearLayout
            android:id="@+id/linearLayout"
	        android:layout_width="match_parent"
	        android:layout_height="0.5dp"
			android:layout_alignParentBottom="true"
	        android:background="#000000"
	        android:orientation="horizontal">
	    </LinearLayout>

        <ImageButton
            android:id="@+id/gw_findPWD_back"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="#00000000"
            android:src="@drawable/back_hl" />

    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/relativelayout2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
         android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_below="@+id/relativelayout1"
     >
    
     <com.gameworks.sdkkit.entry.view.CustomEditText
        android:id="@+id/gw_findPWD_account_email"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       	hint="@string/account_input_tip"
       	icon="@drawable/icon_user_nor"
       	emailType="@string/password_yes"
        android:textColorHint="#D2D2D2"
     />
     </RelativeLayout>
     
    <RelativeLayout
        android:id="@+id/relativelayout3"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/gw_findPWD_getCode"
        android:layout_toLeftOf="@+id/gw_findPWD_getCode"
        android:layout_marginRight="10dp"
        android:layout_alignLeft="@id/relativelayout2"
     >
    
     <com.gameworks.sdkkit.entry.view.CustomEditText
        android:id="@+id/gw_findPWD_code"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       	hint="@string/fill_code"
       	icon="@drawable/icon_password_nor"
       	emailType="@string/password_yes"
        android:textColorHint="#D2D2D2"
     />
        
    
     </RelativeLayout>

     <Button
         android:id="@+id/gw_findPWD_getCode"
         android:layout_width="80dp"
         android:layout_height="40dp"
         android:layout_alignRight="@+id/relativelayout2"
         android:layout_below="@+id/relativelayout2"
         android:background="@drawable/button_yellow_nor"
         android:text="@string/get_code"
         android:textColor="@color/white"
         android:textSize="15sp"
          />
     
	<Button
         android:id="@+id/gw_submit"
         android:layout_width="match_parent"
         android:layout_height="40dp"
         android:layout_alignParentBottom="true"
         android:layout_marginBottom="30dp"
         android:layout_alignRight="@+id/gw_findPWD_getCode"
         android:layout_alignLeft="@+id/relativelayout3"
         android:background="@drawable/button_red_nor"
         android:text="@string/determine"
         android:textColor="@color/white"
         android:textSize="26dp"
          />
	<TextView 
	    android:id="@+id/tv_servicetel"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
	    android:layout_marginBottom="5dp"
	    android:layout_centerHorizontal="true"
	    android:textColor="@color/black"
	    android:textSize="15sp"
	    android:visibility="gone"/>

</RelativeLayout>
