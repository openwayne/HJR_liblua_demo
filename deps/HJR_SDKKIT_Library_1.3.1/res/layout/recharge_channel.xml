<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/black"
    android:orientation="vertical" >

    <com.gameworks.sdkkit.entry.view.CustomTitle
        android:id="@+id/custom_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <include layout="@layout/include_recharge_info" />

            <!-- 支付方式 -->

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:background="@color/black"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="@string/recharge_channel"
                android:textColor="#ffb7b7b7"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dip"
                android:layout_marginTop="5dip"
                android:background="@drawable/common_gradient_recharge" 
                android:orientation="vertical">
			 <View
			        android:layout_width="fill_parent"
			        android:layout_height="0.6dip"
			        android:background="#ff454545"
			         />
                <com.gameworks.sdkkit.entry.view.AutoResizeGridView
                    android:id="@+id/gw_gv_channel"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:cacheColorHint="#00000000"
                    android:divider="#00000000"
                    android:numColumns="3"
                    android:scrollbars="none"
                    android:verticalSpacing="5dip" >
                </com.gameworks.sdkkit.entry.view.AutoResizeGridView>
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:background="@color/black"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="@string/recharge_money"
                android:textColor="#ffb7b7b7"
                android:textSize="14sp" />

           
            <include layout="@layout/include_recharge_money_info" />

            <Button
                android:id="@+id/next"
                android:layout_width="fill_parent"
                android:layout_height="45dip"
                android:layout_marginLeft="80dip"
                android:layout_marginRight="80dip"
                android:layout_marginTop="10dip"
                android:layout_marginBottom="10dip"
                android:text="@string/gw_recharge_now"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:visibility="gone" />

            <include
                android:layout_marginTop="10dip"
                layout="@layout/include_reminder" />

            <include layout="@layout/include_bottom_flag" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>