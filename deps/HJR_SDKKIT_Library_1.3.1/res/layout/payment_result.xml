<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical" >

   <com.gameworks.sdkkit.entry.view.CustomTitle
        android:id="@+id/custom_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" /> 

    <ScrollView
        android:background="@color/black"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            
             
               <!--  <TextView 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" 
                android:text="@string/gw_notice_info"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:gravity="center_horizontal|center_vertical"
               /> -->
            
            <!-- "您的交易已提交等" 水平布局 -->
          
                <TextView 
                android:id="@+id/gw_tv_business_info"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" 
                android:text="@string/gw_business_info_submit"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:gravity="center_horizontal|center_vertical"
               />
                       
           <!-- 订单号：xxxx -->
            <LinearLayout 
                android:id="@+id/gw_ll_orderId"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" 
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                 android:visibility="invisible"
                >
                <TextView 
                    android:layout_weight="2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="@string/order_code"
                    android:paddingLeft="20dp"
                    />
                 <TextView 
                     android:id="@+id/gw_tv_orderId"
                     android:layout_weight="1"
                     android:layout_width="fill_parent"
                     android:layout_height="wrap_content"
                     android:textColor="@color/white"
                    />
            </LinearLayout>  
          <!-- 充值金额 -->  
            <LinearLayout 
                android:id="@+id/gw_ll_recharge_money"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" 
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                 android:visibility="invisible"
                >
                <TextView 
                    android:layout_weight="2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="@string/gw_tv_pay_money_title"
                    android:paddingLeft="20dp"
                    />
                 <TextView 
                     android:id="@+id/gw_tv_recharge_money"
                     android:layout_weight="1"
                     android:layout_width="fill_parent"
                     android:layout_height="wrap_content"
                     android:textColor="@color/white"
                    />
            </LinearLayout>  
            <!-- 充值标题 -->
              <LinearLayout 
                 android:id="@+id/gw_ll_recharge_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" 
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                 android:visibility="invisible"
                >
                <TextView 
                    android:layout_weight="2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="@string/gw_recharge_order_title"
                    android:paddingLeft="20dp"
                    />
                 <TextView 
                     android:id="@+id/gw_tv_recharge_title"
                     android:layout_weight="1"
                     android:layout_width="fill_parent"
                     android:layout_height="wrap_content"
                     android:textColor="@color/white"
                    />
            </LinearLayout> 
            <!-- 消费金额:xxx -->
                <LinearLayout 
                    android:id="@+id/gw_ll_consume_money"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" 
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                 android:visibility="invisible"
                >
                <TextView 
                    android:layout_weight="2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="@string/gw_consume_money"
                    android:paddingLeft="20dp"
                    />
                 <TextView 
                     android:id="@+id/gw_tv_consume_money"
                     android:layout_weight="1"
                     android:layout_width="fill_parent"
                     android:layout_height="wrap_content"
                     android:textColor="@color/white"
                    />
            </LinearLayout>
            <!-- 实收金额:xxx -->
                  <LinearLayout 
                      android:id="@+id/gw_ll_confirm_money"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" 
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                 android:visibility="invisible"
                >
                <TextView 
                    android:layout_weight="2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="@string/gw_confirm_money"
                    android:paddingLeft="20dp"
                    />
                 <TextView 
                     android:id="@+id/gw_tv_confirm_money"
                     android:layout_weight="1"
                     android:layout_width="fill_parent"
                     android:layout_height="wrap_content"
                     android:textColor="@color/white"
                    />
            </LinearLayout>
            <!-- 错误信息 -->
                <LinearLayout 
                android:id="@+id/gw_ll_error_info"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" 
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:paddingBottom="20dp"
                android:visibility="gone"
                >
                <TextView 
                    android:layout_weight="2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="@string/order_error"
                    android:paddingLeft="20dp"
                    />
                 <TextView 
                     android:id="@+id/gw_tv_error_info"
                     android:layout_weight="1"
                     android:layout_width="fill_parent"
                     android:layout_height="wrap_content"
                     android:textColor="#ff0000"
                    />
            </LinearLayout>
            
            <!--充值有延迟/成功的 状态信息 -->      
             <LinearLayout 
                 android:id="@+id/gw_ll_delay_state_info"
                   android:layout_width="fill_parent"
                   android:layout_height="wrap_content"
                     android:orientation="vertical"
                     android:paddingTop="20dp"
                     android:paddingBottom="50dp"
                      android:visibility="invisible"
                   >
                  <TextView 
                        android:id="@+id/gw_tv_recharge_success_info"
                        android:paddingBottom="5dp"
                        android:textColor="@color/white"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/gw_notice_info_success"
                        android:paddingLeft="80dp"
                        />
                    <TextView 
                        android:paddingLeft="20dp"
                        android:textColor="@color/white"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="false"
                        android:text="@string/gw_notice_info_wait"
                        />
                                
                </LinearLayout>  
            
                
            <include
                android:layout_marginTop="10dip"
                layout="@layout/include_reminder" />

            <include
                android:layout_marginTop="30dip"
                layout="@layout/include_bottom_flag" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>