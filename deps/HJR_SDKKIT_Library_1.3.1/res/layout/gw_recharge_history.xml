<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical" >

    <com.gameworks.sdkkit.entry.view.CustomTitle
        android:id="@+id/gw_self_custom_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <!-- 全部，已完成，未完成 -->

            <LinearLayout
                android:id="@+id/gw_ll_complete_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/gw_tv_full"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/black"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="@string/gw_full"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/gw_tv_done"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/black"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="@string/gw_done"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/gw_tv_undone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/black"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="@string/gw_undone"
                    android:textColor="@color/white"
                    android:textSize="18sp" />
            </LinearLayout>

            <!-- icon 游戏,区服 -->

            <LinearLayout
                android:id="@+id/gw_ll_game_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:background="@drawable/common_gradient"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingTop="10dp" >

                <com.gameworks.sdkkit.entry.view.AsyncLoadImageView
                    android:id="@+id/gw_self_game_icon"
                    android:layout_width="60dip"
                    android:layout_height="60dip"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="30dip" >
                </com.gameworks.sdkkit.entry.view.AsyncLoadImageView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dip"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dip"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/gw_game"
                            android:textColor="#ffb7b7b7"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/gw_tv_game_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:textColor="#ffb7b7b7"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dip"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/gw_center_account"
                            android:textColor="#ffb7b7b7"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/gw_tv_account"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:textColor="#ffb7b7b7"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- "充值历史" -->

            <TextView
                android:id="@+id/gw_text_recharge_history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:gravity="center_horizontal|center_vertical"
                android:text="@string/gw_recharge_history"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/gw_ll_recharge_history_item_controller"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#252525"
                android:orientation="vertical"
                android:padding="10dip" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <com.gameworks.sdkkit.entry.view.AutoResizeListView
                        android:id="@+id/gw_self_lv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <!-- 底部logo -->

                </LinearLayout>
            </LinearLayout>

            <include layout="@layout/include_bottom_flag" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>