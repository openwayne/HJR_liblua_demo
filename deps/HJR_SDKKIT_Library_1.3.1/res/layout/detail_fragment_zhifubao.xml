<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rechage_sumbit" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:id="@+id/price_ll_root"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/info_bg"
                android:orientation="horizontal"
                android:padding="10dp" >

                <LinearLayout
                    android:id="@+id/price_ll_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="3dp"
                            android:src="@drawable/my_money" />

                        <TextView
                            android:id="@+id/red_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:textColor="#FFD217"
                            android:textSize="20dp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/num_yuanbao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:textColor="#B1C1DD"
                        android:textSize="15dp" />
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/price_ll_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1" >

                    <ImageView
                        android:id="@+id/recharge_account_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/icon_user_nor" />

                    <TextView
                        android:id="@+id/recharge_account_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/recharge_account_1"
                        android:ems="10"
                        android:singleLine="true"
                        android:textColor="#888888"
                        android:textSize="15dp" />

                    <ImageView
                        android:id="@+id/recharge_district_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/recharge_account_1"
                        android:layout_below="@id/recharge_account_1"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/zhcz_fwq" />

                    <TextView
                        android:id="@+id/recharge_district_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/recharge_account_2"
                        android:layout_below="@id/recharge_account_2"
                        android:ems="10"
                        android:singleLine="true"
                        android:text="text2"
                        android:textColor="#888888"
                        android:textSize="15dp" />
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/recharge_detail_alipay_amount_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/price_ll_root"
                android:layout_marginTop="5dp" >

                <CheckBox
                    android:id="@+id/reinput_money_checkbox"
                    style="@style/CustomCheckboxTheme"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/iv_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/list_nor" />

                <ImageView
                    android:id="@+id/iv_xzje"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/iv_input"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/xzje" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/iv_xzje"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/iv_xzje"
                    android:text="修改充值金额"
                    android:textColor="#888888" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/recharge_detail_alipay_amount_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/price_ll_root"
                android:layout_below="@+id/recharge_detail_alipay_amount_label" >

                <LinearLayout
                    android:id="@+id/hint_choose"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    android:orientation="vertical"
                    android:visibility="gone" >

                    <LinearLayout
                        android:id="@+id/choose_tip_ll"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:src="@drawable/dian" />

                        <TextView
                            android:id="@+id/choose_tip1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="快速选择充值金额"
                            android:textColor="#888888"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/choose_tip2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#F36618"
                            android:textSize="15dp" />
                    </LinearLayout>

                    <GridView
                        android:id="@+id/choose_money_gv"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginTop="5dp"
                        android:horizontalSpacing="5dp"
                        android:numColumns="4"
                        android:verticalSpacing="5dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:src="@drawable/dian" />

                        <TextView
                            android:id="@+id/input_other_tip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="输入其他充值金额："
                            android:textColor="#888888"
                            android:textSize="15dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/input_other_ll"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <RelativeLayout
                            android:id="@+id/input_other_rl"
                            android:layout_width="170dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp" >

                            <com.gameworks.sdkkit.entry.view.CustomEditText
                                android:id="@+id/input_other_et"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                emailType="@string/password_yes"
                                hint="@string/please_input_money"
                                android:background="@drawable/input_bg"
                                android:textColorHint="#D2D2D2"
                                android:textSize="10dp" />
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/input_other_tip2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:text="元"
                            android:textColor="@color/black"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/input_tip2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:textColor="#F36618"
                            android:textSize="15dp" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
             <RelativeLayout
                    android:id="@+id/service_infos"
                    android:layout_below="@+id/recharge_detail_alipay_amount_grid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/kf_list" >

                    <TextView
                        android:id="@+id/customer_service_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="10dp"
                        android:text="客服热线：18583256697"
                        android:textColor="#888888"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/service_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/customer_service_phone"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/customer_service_phone"
                        android:text="服务时间：每天8:30-23:00"
                        android:textColor="#888888"
                        android:textSize="15dp" />
                </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/rechage_sumbit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:gravity="center" >

        <ImageView
            android:id="@+id/rechage_sumbit_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/button_red_nor" />

        <TextView
            android:id="@+id/rechage_sumbit_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/rechage_sumbit_iv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="充值"
            android:textColor="@color/white"
            android:textSize="18dp" />
    </RelativeLayout>

</RelativeLayout>