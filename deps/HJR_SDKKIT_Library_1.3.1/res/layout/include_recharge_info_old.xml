<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/common_gradient"
    android:orientation="horizontal"
    android:padding="10dip" >

    <com.gameworks.sdkkit.entry.view.AsyncLoadImageView
        android:id="@+id/game_icon"
        android:layout_marginLeft="15dip"
        android:layout_gravity="center_vertical"
        android:layout_width="60dip"
        android:layout_height="60dip" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dip"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/ll_value_game"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dip"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5.0"
                android:textColor="#ffb7b7b7"
                android:text="@string/value_game_text" />

            <TextView
                android:id="@+id/game_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_weight="2.0"
                android:textColor="#ffb7b7b7"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_value_user"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dip"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5.0"
                android:textColor="#ffb7b7b7"
                android:text="@string/value_user_text" />

            <TextView
                android:id="@+id/game_user"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_weight="2.0"
                android:textColor="#ffb7b7b7"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_value_channel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5.0"
                android:textColor="#ffb7b7b7"
                android:text="@string/value_channel_text" />

            <TextView
                android:id="@+id/channel_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:textColor="#ffb7b7b7"
                android:layout_weight="2.0"
                 />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>