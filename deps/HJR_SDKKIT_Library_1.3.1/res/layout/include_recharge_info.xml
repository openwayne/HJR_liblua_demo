<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/common_gradient"
    android:orientation="vertical"
    android:paddingTop="10dip"
    android:paddingLeft="15dip"
    android:paddingRight="15dip"
    android:paddingBottom="10dip" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <com.gameworks.sdkkit.entry.view.AsyncLoadImageView
            android:id="@+id/game_icon"
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dip"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/ll_value_game"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dip"
                android:orientation="horizontal"
                android:visibility="gone" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/value_game_text"
                    android:textColor="#ffb7b7b7"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/game_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:textColor="#ffb7b7b7"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- 游戏区服 -->

            <LinearLayout
                android:id="@+id/gw_ll_game_server"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dip"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/gw_tv_game_server_title"
                    android:textColor="#ffb7b7b7" 
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/gw_tv_game_server_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:textColor="@color/white" 
                    android:textSize="14sp"/>
            </LinearLayout>

            <!-- 确认充值账号 -->

            <LinearLayout
                android:id="@+id/ll_value_user"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dip"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/value_user_text"
                    android:textColor="#ffb7b7b7"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/game_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:textColor="@color/white" 
                    android:textSize="14sp"/>
            </LinearLayout>
<!-- 充值金额 -->

            <LinearLayout
                android:id="@+id/gw_ll_pay_money"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/gw_tv_pay_money_title"
                    android:textColor="#ffb7b7b7" 
                    android:textSize="14sp"/>
                         
                <TextView
                    android:id="@+id/gw_id_tv_pay_money_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:textColor="#fc9100" 
                    android:textSize="14sp"/>
            </LinearLayout>
            <!-- order_form 第二个页面需要的 (所需支付金额,已改为确认金额) -->

            <LinearLayout
                android:id="@+id/gw_ll_pay_money2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dip"
                android:orientation="horizontal"
                android:visibility="gone" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/gw_tv_charge_title"
                    android:textColor="#ff0000" />

                <TextView
                    android:id="@+id/gw_tv_pay_money_content2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:textColor="#ff0000" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- 分隔线 -->

    <View
        android:id="@+id/gwid_separate_line"
        android:layout_width="fill_parent"
        android:layout_height="3dip"
        android:background="#363636"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/gw_ll_new_charge_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:visibility="gone" >

        <ImageView
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dip" 
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <!-- 充值标题 -->

            <LinearLayout
                android:id="@+id/gw_ll_recharge_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dip"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/gw_tv_recharge_title"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="5.0"
                    android:text="@string/gw_recharge_order_title"
                    android:textColor="#ffb7b7b7" />

                <TextView
                    android:id="@+id/gw_tv_recharge_title_content"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:layout_weight="2.0"
                    android:textColor="#ff0000" />
            </LinearLayout>

            <!-- 充值金额 -->

            <LinearLayout
                android:id="@+id/gw_ll_pay_money"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dip"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="5.0"
                    android:text="@string/gw_tv_pay_money_title"
                    android:textColor="#ffb7b7b7" />
                         
                <TextView
                    android:id="@+id/gw_id_tv_pay_money_content"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:layout_weight="2.0"
                    android:textColor="#ff0000" />
            </LinearLayout>

            <!-- 确认金额 -->

            <LinearLayout
                android:id="@+id/gw_ll_charge"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dip"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="5.0"
                    android:text="@string/gw_tv_charge_title"
                    android:textColor="#ffb7b7b7" />


                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:layout_weight="2.0"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <EditText
                        android:id="@+id/gw_et_charge_money_confirm"
                        android:layout_width="50dip"
                        android:layout_height="20dip"
                        android:background="#ffffff"
                        android:digits="0123456789"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:gravity="center_vertical"
                        android:inputType="textMultiLine|numberSigned"
                        android:singleLine="false"
                        android:textColor="#ff000000" />
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/money"
                        android:textColor="#ff0000" />
                </LinearLayout>
            </LinearLayout>

            <!-- 必须大于充值金额提示 -->

            <LinearLayout
                android:id="@+id/gw_ll_must_larger_recharge_money"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dip"
                android:orientation="horizontal"
                android:visibility="gone" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="5.0" />

                <TextView
                    android:id="@+id/gw_tv_must_larger_recharge_money"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:layout_weight="2.0"
                    android:gravity="center_vertical"
                    android:singleLine="false"
                    android:text="@string/gw_must_larger_recharge_money"
                    android:textColor="#ff0000"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- 充值渠道 -->

            <LinearLayout
                android:id="@+id/ll_value_channel"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="5.0"
                    android:text="@string/value_channel_text"
                    android:textColor="#ffb7b7b7" />

                <TextView
                    android:id="@+id/channel_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:layout_weight="2.0"
                    android:textColor="#ffb7b7b7" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- 超出部分的提示 -->
     
    <TextView
        android:id="@+id/gw_tv_overstep_monet_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:singleLine="false"
        android:text="@string/gw_overstep_money_info"
        android:textColor="#ffb7b7b7"
        android:visibility="gone" />

</LinearLayout>